<h1> New User Registration </h1>

<%= form_with url: users_register_index_path, method: :post, data: {turbo: false}, local: true do |f|%>
  <%= f.label  :name %>
  <%= f.text_field :name %>

  <%= f.label  :password %>
  <%= f.text_field :password %>


  <%= f.label  :email %>
  <%= f.text_field :email %>

  <%= f.submit "Register" %>
<% end %>

<div id="refactor_to_partial">
  <p><%=  link_to "Return to Movie Viewing Party Landing Page", root_path %></p>
</div>
